{
    "moduleFileExtensions": [
        "js",
        "json",
        "ts"
    ],
    "moduleNameMapper": {
        "@/(.*)": "<rootDir>/../src/$1",
        "@shared/(.*)": "<rootDir>../../shared/$1"
    },
    "rootDir": ".",
    "testEnvironment": "node",
    "testRegex": ".e2e-spec.ts$",
    "transform": {
        "^.+\\.(t|j)s$": [
            "ts-jest",
            {
                "tsconfig": "tsconfig.json"
            }
        ]
    },
    "setupFilesAfterEnv": [
        "<rootDir>/jest-e2e-setup.ts"
    ]
}
