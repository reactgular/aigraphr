{
  "name": "@reactgular/aigraphr",
  "version": "1.0.0",
  "author": "Nick Foscarini",
  "description": "AIGraphr is a graphing library for AI applications",
  "homepage": "https://github.com/reactgular/aigraphr#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/reactgular/aigraphr.git"
  },
  "bugs": {
    "url": "https://github.com/reactgular/aigraphr/issues"
  },
  "directories": {
    "doc": "docs"
  },
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "references": [
    {
      "path": "packages/domain"
    },
    {
      "path": "packages/lib"
    }
  ],
  "scripts": {
    "generate:version": "./scripts/generate_version.sh",
    "start:domain": "yarn workspace @reactgular/aigraphr-domain start:dev",
    "start:lib": "yarn workspace @reactgular/aigraphr-lib start:dev",
    "start:common": "(yarn start:domain & yarn start:lib)",
    "build:domain": "yarn workspace @reactgular/aigraphrdomain build",
    "build:lib": "yarn workspace @reactgular/aigraphr-lib build",
    "build:common": "yarn build:domain && yarn build:lib",
    "build-push:server": "PACKAGE=server ./scripts/build_and_push.sh",
    "build-push:client": "PACKAGE=client ./scripts/build_and_push.sh",
    "lint": "yarn workspaces run lint"
  }
}
